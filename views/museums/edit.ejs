<% include ../partials/header %>


<div class="row">
    <h1 class="form-header">Edit <%= museum.name %></h1>
    <div class="form-box">
        <form action="/art_museum/museums/<%= museum._id %>?_method=PUT" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="museum[name]" value="<%= museum.name %>">
            </div>
            <div class="form-group">
                <input class="form-control" type="number" name="museum[price]" value="<%= museum.price %>" min="0.00" step="0.01">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="museum[image]" value="<%= museum.image %>">
            </div>
            <div class="form-group">
                <textarea class="form-control" type="text" name="museum[description]"><%= museum.description %></textarea>
            </div>
            <div class="form-group">
                <button class="btn btn-primary btn-lg btn-block" type="submit">Submit!</button>
            </div>
        </form>
        <a href="/art_museum/museums">Go Back</a>
    </div>
</div>


<% include ../partials/footer %>