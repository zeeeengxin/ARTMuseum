<% include ../partials/header %>


<div class="row">
    <h1 class="form-header">Edit Comment</h1>
    <div class="form-box">
        <form action="/art_museum/museums/<%= museum_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="comment[text]" value="<%= comment.text %>">
            </div>
            <div class="form-group">
                <button class="btn btn-primary btn-lg btn-block" type="submit">Submit!</button>
            </div>
        </form>
        <a href="/art_museum/museums">Go Back</a>
    </div>
</div>


<% include ../partials/footer %>