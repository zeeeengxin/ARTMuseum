<% include ../partials/header %>


<div class="row">
    <h1 class="form-header">Add New Comment to <%= museum.name %></h1>
    <div class="form-box">
        <form action="/art_museum/museums/<%= museum._id %>/comments" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="comment[text]" placeholder="text">
            </div>
            <div class="form-group">
                <button class="btn btn-primary btn-lg btn-block" type="submit">Submit!</button>
            </div>
        </form>
        <a href="/art_museum/museums">Go Back</a>
    </div>
</div>


<% include ../partials/footer %>